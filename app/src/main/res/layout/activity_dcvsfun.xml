<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.nac.kalisynth.dcvsconnect2.Dcvsfun"
    android:background="@drawable/dcvs_ui_playscreen"
    tools:ignore="Overdraw"
    android:id="@+id/funlayout">

    <Button
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/greenpinkspiral"
        android:contentDescription="@string/GameSBTN"
        android:id="@+id/fungamesbtn"
        android:text="@string/gamesstring"
        android:gravity="bottom|center"
        android:paddingBottom="40dp"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="#0e1f29"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/radioBTN"
        android:background="@drawable/orange"
        android:contentDescription="@string/RadioBTN"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="@string/radiostring"
        android:gravity="bottom|center"
        android:paddingBottom="40dp"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="#0e1f29"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/livestreambtn"
        android:contentDescription="@string/LivestreamBtn"
        android:background="@drawable/bluepink"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="270dp"
        android:text="@string/broadcasts"
        android:gravity="bottom|center"
        android:paddingBottom="40dp"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="#0e1f29"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/greenblue"
        android:contentDescription="@string/InternetBTN"
        android:id="@+id/funinternetbtn"
        android:layout_above="@+id/livestreambtn"
        android:layout_toEndOf="@+id/fungamesbtn"
        android:layout_marginStart="146dp"
        android:text="@string/internetstring"
        android:gravity="bottom|center"
        android:paddingBottom="40dp"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textColor="#0e1f29"/>
</RelativeLayout>
