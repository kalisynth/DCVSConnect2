<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.nac.kalisynth.dcvsconnect2.Dcvsfun"
    android:background="@drawable/funscreen"
    tools:ignore="Overdraw"
    android:id="@+id/funlayout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gamesBTN"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/dcvsrectgames"
        android:onClick="gamesonclick"
        android:contentDescription="@string/GameSBTN" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/internetBTN"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/dcvsrectinternet"
        android:onClick="internetonClick"
        android:contentDescription="@string/InternetBTN" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioBTN"
        android:background="@drawable/dcvsradio"
        android:onClick="radioonclick"
        android:contentDescription="@string/RadioBTN"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/internetBTN"
        android:layout_marginEnd="55dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/livestreambtn"
        android:background="@drawable/dcvsnaclivestream"
        android:layout_alignTop="@+id/radioBTN"
        android:layout_toEndOf="@+id/gamesBTN"
        android:layout_marginStart="89dp"
        android:onClick="onStreamClick" />
</RelativeLayout>
