<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.nac.kalisynth.dcvsconnect2.DCVSHelp"
    android:background="@drawable/helpscreen"
    tools:ignore="Overdraw">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HelpGBTN"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/dcvsrecthelpguide"
        android:contentDescription="@string/HelpGuideBTN"
        android:onClick="helpguideonclick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QuickSupportBTN"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/dcvsrectquicksupport"
        android:contentDescription="@string/QuickSupportBTN"
        android:onClick="quicksupportclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SkypeVersion"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/skypecheck"
        android:onClick="skypeversionclick"
        android:layout_alignParentEnd="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/missingappslist"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />
</RelativeLayout>
