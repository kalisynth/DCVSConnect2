<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/dcvs_ui_internet_screen">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iWebView"
        android:layout_toEndOf="@+id/seniorbtnlayout"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/seniorbtnlayout">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/nacwbtn"
            android:textSize="20sp"
            android:background="@drawable/nacbtn" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="20sp"
            android:id="@+id/seniorowbtn"
            android:background="@drawable/nsbtn" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/newswlayout">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/abcnwbtn"
            android:layout_weight="1"
            android:background="@drawable/abcnews"
            tools:ignore="InefficientWeight" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/sevennwbtn"
            android:background="@drawable/sevennews" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:id="@+id/googlewbtn"
            android:background="@drawable/googlebtn" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/mapwbtn"
            android:layout_weight="1"
            android:background="@drawable/googlembtn" />

    </LinearLayout>

</RelativeLayout>
