<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.nac.kalisynth.dcvsconnect2.About"
    android:background="@drawable/dcvs_ui_internet_screen"
    tools:ignore="Overdraw">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <Button
            android:text="@string/aboutdcvs"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/aboutdcvsbtn"
            android:gravity="bottom|center"
            android:textStyle="normal|bold"
            android:textColor="#0e1f29"
            android:layout_weight="1"
            android:background="@drawable/blue2" />

        <Button
            android:text="@string/aboutapp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/aboutappbtn"
            android:gravity="bottom|center"
            android:textStyle="normal|bold"
            android:textColor="#0e1f29"
            android:layout_weight="1"
            android:background="@drawable/greenblue" />

        <Button
            android:text="@string/aboutnactech"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/aboutnactechbtn"
            android:gravity="bottom|center"
            android:textStyle="normal|bold"
            android:textColor="#0e1f29"
            android:layout_weight="1"
            android:background="@drawable/greenpinkspiral" />

        <Button
            android:text="@string/aboutnac"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="bottom|center"
            android:textStyle="normal|bold"
            android:textColor="#0e1f29"
            android:id="@+id/aboutnacbtn"
            android:layout_weight="1"
            android:background="@drawable/redyellowgreen" />
    </LinearLayout>

    <WebView
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/aboutwebview" />
</RelativeLayout>
