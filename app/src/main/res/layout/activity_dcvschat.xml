<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/dcvs_uichat_screen"
    android:contentDescription="@string/EditSwitchCD">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonopenskype"
            android:contentDescription="@string/SkypeBTN"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/openskypebtn" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/skypename"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonskypebtn3"
            android:contentDescription="@string/SpeedDialThree"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/skypebtn3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonskypebtn4"
            android:contentDescription="@string/SpeedDialFour"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/skypebtn4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonskypebtn2"
            android:contentDescription="@string/SpeedDialTwo"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/skypebtn2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonskypebtn1"
            android:contentDescription="@string/SpeedDialOne"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/skypebtn1"/>
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center">

        <TextView
            android:text="@string/SpeedDialFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#00aff0"
            android:id="@+id/skypec4btn"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:text="@string/SpeedDialOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#00aff0"
            android:id="@+id/skypec1btn"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:text="@string/SpeedDialTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#00aff0"
            android:id="@+id/skypec2btn"
            android:layout_row="0"
            android:layout_column="1"/>

        <TextView
            android:text="@string/SpeedDialThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="#00aff0"
            android:id="@+id/skypec3btn"
            android:layout_row="1"
            android:layout_column="0" />
    </GridLayout>

</FrameLayout>
